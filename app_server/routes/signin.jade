extends layout

block content
  h1(style="margin-top:80px") Login

  .container
    p.lead
      | Sign in with your account. Don't have one? 
      a(href='/register') Register Now.

    form(action='/login', method='post')
      .form-group
        label(for='username') Username
        input.form-control(type='text', id='username', name='username', placeholder='Enter a username', required)

      .form-group
        label(for='password') Password
        input.form-control(type='password', id='password', name='password', placeholder='Enter a password', required)

      button.btn.btn-primary(type='submit') Submit
      |  
      a.btn.btn-default(role='button', href='/') Cancel